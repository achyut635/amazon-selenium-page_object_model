<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Smoke Suite" verbose="1" parallel="false">
  <listeners>
    <listener class-name="base.AllureTestListener"/>
  </listeners>
  <parameter name="headed" value="false"/>
  <test name="Smoke">
    <groups>
      <run>
        <include name="smoke"/>
      </run>
    </groups>
    <classes>
      <class name="tests.ExampleTest"/>
      <class name="tests.ProductFlowTest"/>
    </classes>
  </test>
</suite>
